<table class='table'>
    <thead>
        <th>
        </th>
        <th>
            Auðkenni setningar
            {{macros.sort_th_a('id')}}
        </th>
        <th>
            Texti
        </th>
        <th>
            Fjöldi einkunna
        </th>
        <th>
            Meðaleinkunn
        </th>
        <th>
            Staðalfrávik
        </th>
    </thead>
    <tbody>
        {% for mos in mos_list %}
            <tr>
                <td>
                    <audio id="audio-{{mos.custom_recording.id}}" src={{mos.custom_recording.get_download_url()}} type="audio/wav"></audio>
                    <button type='button' class='btn btn-link btn-sm' onClick="play({{mos.custom_recording.id}})">
                        <i id='playButtonIcon-{{mos.custom_recording.id}}' class='fa fa-play'></i>
                    </button>
                </td>
                {% if mos.custom_token %}
                    <td><a href={{mos.custom_token.get_url()}} class='{% if mos.custom_token.marked_as_bad %} text-warning {% endif %}'><code>{{mos.custom_token.get_printable_id()}}</code></a></td>
                {% else %}
                    <td>-</td>
                {% endif %}

                <td>{{mos.text}}</td>
                <td>
                    {{mos.number_of_ratings}}
                </td>
                <td>{{mos.average_rating}}</td>
                <td>{{mos.std_of_ratings}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<script src='{{url_for("main.static", filename="js/listControls.js")}}'></script>